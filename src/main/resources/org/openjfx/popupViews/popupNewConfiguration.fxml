                        <ScrollPane fitToWidth="true" layoutY="70.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
                           <content>
                              <VBox fx:id="vBoxConfigurationOptions" prefHeight="428.0" spacing="10.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                        <Label alignment="CENTER" prefHeight="35.0" prefWidth="385.0" text="Components" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
            <AnchorPane>
               <children>
                  <Label layoutX="437.0" layoutY="10.0" text="Total Price:" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="437.0" AnchorPane.topAnchor="10.0">
