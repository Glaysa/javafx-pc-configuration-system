<BorderPane prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.popupControllers.PopupNewConfigurationController">
   <center>
      <VBox fx:id="parentPane" prefHeight="800.0">
         <children>
            <TableView fx:id="tableViewComponents" prefHeight="300.0" prefWidth="200.0">
              <columns>
                 <TableColumn maxWidth="200.0" minWidth="-Infinity" prefWidth="50.0" resizable="false" text="ID">
