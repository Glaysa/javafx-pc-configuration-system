<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.PopupNewConfigurationController">
   <children>
      <TableView fx:id="tableViewComponents" prefHeight="200.0" prefWidth="200.0">
        <columns>
           <TableColumn maxWidth="200.0" minWidth="-Infinity" prefWidth="50.0" resizable="false" text="ID">
              <cellValueFactory>
                 <PropertyValueFactory property="PCComponentID" />
              </cellValueFactory>
           </TableColumn>

           <TableColumn maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Name">
              <cellValueFactory>
                 <PropertyValueFactory property="componentName" />
              </cellValueFactory>
           </TableColumn>

           <TableColumn maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Type">
              <cellValueFactory>
                 <PropertyValueFactory property="componentType" />
              </cellValueFactory>
           </TableColumn>

           <TableColumn maxWidth="200.0" minWidth="200.0" prefWidth="200.0" resizable="false" text="Specifications">
              <cellValueFactory>
                 <PropertyValueFactory property="componentSpecs" />
              </cellValueFactory>
           </TableColumn>

           <TableColumn maxWidth="200.0" minWidth="100.0" prefWidth="200.0" text="Price">
              <cellValueFactory>
                 <PropertyValueFactory property="componentPrice" />
              </cellValueFactory>
           </TableColumn>
        </columns>
      </TableView>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0">
         <children>
            <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="0.0">
               <content>
                  <AnchorPane prefHeight="600.0" prefWidth="400.0">
                     <children>
                        <VBox fx:id="vBoxConfigurationOptions" prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label alignment="CENTER" prefWidth="400.0" text="PC Configuration">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Separator prefWidth="200.0" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
            <ScrollPane fitToWidth="true" layoutX="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <content>
                  <AnchorPane prefHeight="600.0">
                     <children>
                        <VBox fx:id="vBoxConfigurations" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label alignment="CENTER" prefWidth="400.0" text="Your PC">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Separator prefWidth="200.0" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
